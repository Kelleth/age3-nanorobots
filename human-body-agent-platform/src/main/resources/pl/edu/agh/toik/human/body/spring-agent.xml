<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="configuration" class="org.age.compute.mas.configuration.ConfigurationLoader"
	      factory-method="loadFromClassPath">
		<constructor-arg value="pl/edu/agh/toik/human/body/computation.cfg"/>
	</bean>

	<bean id="runnable"
	      class="org.age.compute.mas.Platform">
		<constructor-arg ref="configuration"/>
	</bean>

</beans>
